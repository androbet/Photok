<layout>

    <data>

        <variable
            name="viewModel"
            type="dev.leonlatsch.photok.gallery.ui.collections.AddCollectionViewModel" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_dialog_round"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="@dimen/small_gap">

        <TextView
            style="@style/BigTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New collection" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/medium_gap"
            android:layout_marginVertical="@dimen/medium_gap"
            android:hint="Collection name"
            android:inputType="text"
            android:maxLength="36"
            android:maxLines="1"
            android:text="@={viewModel.collectionName}"
            android:textAlignment="center" />

        <Button
            style="@style/buttonStyle"
            android:layout_width="@dimen/small_button_width"
            android:layout_height="@dimen/button_height"
            android:layout_marginBottom="@dimen/medium_gap"
            android:onClick="@{() -> viewModel.addCollection()}"
            android:text="Add" />

    </LinearLayout>

</layout>
